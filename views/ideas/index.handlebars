{{#each ideas}}
<div class="container mt-3">
  <div class="card card-body mb-4">
    <h4>{{name}}</h4>
    <p>{{description}}</p>
    <a class="btn btn-outline-primary mb-2" href="/ideas/edit/{{id}}">Edit</a>
    <form method="POST" action="/ideas/{{id}}?_method=DELETE">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" class="btn btn-outline-danger btn-block" value="Delete">
    </form>
  </div>
</div>

{{else}}
<div class="container">
  <p>You don't have any startup ideas yet!</p>
</div>
{{/each}}
